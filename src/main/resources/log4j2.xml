<?xml version="1.0" encoding="UTF-8"?>
<configuration status="trace">
    <appenders>
        <!-- 控制台输出格式 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} %msg%n"/>
        </Console>
    </appenders>
    <loggers>
        <logger name="com.cardinfolink.saber" level="debug"/>
        <logger name="org.apache.commons.jexl2.JexlEngine" level="error" />
        <logger name="com.cardinfolink.saber.system.persistence.SequenceMapper" level="info" />
        <logger name="com.cardinfolink.saber.system.persistence.ExceptionMapper" level="info" />
        <logger name="com.cardinfolink.saber.system.persistence.UserMapper.findByUsernameOrUserPhone" level="info" />
        <root level="info">
            <appender-ref ref="Console"/>
        </root>
    </loggers>
</configuration>